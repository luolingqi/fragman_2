#!/bin/csh -f

echo
echo  "ATTENTION"
echo
echo  "The Mulliken charges were generated by mopac6, you may get different result if diffe rent QM program is applied"
echo 
../../exe/antechamber -i sustiva.pdb -fi pdb -o sustiva.mol2 -fo mol2 \
   -c bcc -s 2 -df 0 || goto error
../../exe/parmchk -i sustiva.mol2 -f mol2 -o frcmod || goto error
../../exe/tleap -s -f leap.in > leap.out || goto error

../../exe/dacdif -s -t 2 sustiva.mol2.save sustiva.mol2
../../exe/dacdif frcmod.save frcmod
../../exe/dacdif -t 6 prmtop.save prmtop

/bin/rm -f ANTE* ATOMTYPE.INF BCCTYPE.INF FOR* NEWPDB.PDB PREP.INF mopac.in
exit(0)

error:
echo "  ${0}:  Program error"
exit(1)
